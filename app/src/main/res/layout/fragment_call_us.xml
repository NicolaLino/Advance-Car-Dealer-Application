<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CallUsFragment">

    <Button
        android:id="@+id/button_contact_phone"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/robot_medium"
        android:text="Call car dealer"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_contact_maps"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/robot_medium"
        android:text="Open Map"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_contact_email"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/robot_medium"
        android:text="Send Email to the car dealer"
        android:textSize="18sp" />

</LinearLayout>
