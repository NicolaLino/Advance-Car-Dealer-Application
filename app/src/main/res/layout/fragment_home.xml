<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="236dp"
        android:layout_height="232dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/gray">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/dealer1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRound"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/dealer1NameTextView"
            android:layout_width="161dp"
            android:layout_height="33dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Friends Motors"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/listImage1"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/listImage1"
            app:layout_constraintTop_toBottomOf="@+id/listImage1" />

        <TextView
            android:id="@+id/location1NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramallah, Palestine"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dealer1NameTextView"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/dealer1NameTextView"
            app:layout_constraintTop_toBottomOf="@+id/dealer1NameTextView"
            app:layout_constraintVertical_bias="0.369" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="236dp"
        android:layout_height="232dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/gray">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/dealer2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRound"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/dealer2NameTextView"
            android:layout_width="315dp"
            android:layout_height="27dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="MercedesBenz Gargourieh"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/listImage2"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/listImage2"
            app:layout_constraintTop_toBottomOf="@+id/listImage2" />

        <TextView
            android:id="@+id/location2NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramallah, Palestine"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dealer2NameTextView"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/dealer2NameTextView"
            app:layout_constraintTop_toBottomOf="@+id/dealer2NameTextView"
            app:layout_constraintVertical_bias="0.369" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="236dp"
        android:layout_height="232dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/gray">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/dealer3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRound"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/dealer3NameTextView"
            android:layout_width="161dp"
            android:layout_height="33dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Abu Alreesh"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/listImage3"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/listImage3"
            app:layout_constraintTop_toBottomOf="@+id/listImage3" />

        <TextView
            android:id="@+id/location3NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beit Jala, Palestine"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dealer3NameTextView"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/dealer3NameTextView"
            app:layout_constraintTop_toBottomOf="@+id/dealer3NameTextView"
            app:layout_constraintVertical_bias="0.369" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>